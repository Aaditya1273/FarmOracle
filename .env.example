# ===== BLOCKCHAIN CONFIGURATION (ETHEREUM SEPOLIA) =====
# Ethereum Sepolia Testnet RPC URL
RPC_URL=https://rpc.sepolia.org

# Your wallet private key (KEEP THIS SECRET!)
PRIVATE_KEY=your_private_key_here

# Deployed FarmOracleComplete contract address
CONTRACT_ADDRESS=0x2f4C507343fC416eAD53A1223b7d344E1e90eeC4

# Network ID for Ethereum Sepolia Testnet
NETWORK_ID=11155111

# ===== FRONTEND CONFIGURATION =====
# Next.js App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_wallet_connect_project_id

# ===== BACKEND CONFIGURATION =====
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend port (DO NOT CHANGE - must be 8000)
# PORT=8000

# Frontend port (for Next.js - separate from backend)
# FRONTEND_PORT=3000

# ===== AI/ML CONFIGURATION =====
# Google Gemini API Key (for AI agents)
GEMINI_API_KEY=your_gemini_api_key_here
# Get your free API key from: https://makersuite.google.com/app/apikey

# ===== OPTIONAL: EXTERNAL SERVICES =====
# Weather API key
WEATHER_API_KEY=your_weather_api_key

# IPFS configuration
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# ===== SMS/TWILIO CONFIGURATION =====
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== SECURITY =====
JWT_SECRET=your_random_jwt_secret_key_here
RATE_LIMIT_PER_MINUTE=100

# ===== DEPLOYMENT =====
NODE_ENV=development
DEBUG=true